import kotlin.Boolean;

CREATE TABLE Terms (
    id INTEGER PRIMARY KEY NOT NULL,
    term TEXT NOT NULL,
    locked INTEGER AS Boolean,
    lastArticleGuid TEXT
);

insertTerm:
INSERT INTO Terms (term, locked, lastArticleGuid)
VALUES (?, ?, ?);

updateTerm:
UPDATE Terms
SET term = ?, locked = ?, lastArticleGuid = ?
WHERE id = ?;

selectAll:
SELECT *
FROM Terms;

selectOne:
SELECT *
FROM Terms
WHERE id = ?;

deleteTerm:
DELETE FROM Terms
WHERE id = ?;